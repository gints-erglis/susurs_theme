{#
 # Available variables:
 # - details__base_class - base classname of the wrapper.
 # - details__modifiers - array of modifiers to add to the base classname of the wrapper.
 # - details__blockname - blockname prepended to the base classname of the wrapper(s) and each component.
 # - details__extra_classes
 #
 # - details__summary - the content of the title component.
 #
 # - details__body - the content of the body component.
 #
 #}
{% set details__base_class = 'card' %}

<details {{ bem(details__base_class, details__modifiers, details__blockname, details__extra_classes) }}>
  <summary>
    {% include "@atoms/images/icons/_icon.twig" with {
      icon_name: 'next',
      icon_base_class: 'icon',
      icon_blockname: 'arrow-right',
    } %}
    {{ details__summary|without('#theme') }}
  </summary>
  <div class="content">
    {{ details__body }}
  </div>
</details>